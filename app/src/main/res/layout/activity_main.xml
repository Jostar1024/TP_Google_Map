<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.caoych.expr2_google_map.MainActivity">


    <Button
        android:text="@string/contentButtonMap"
        android:onClick="jumpToMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMap"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_alignParentEnd="true" />

    <Switch
        android:text="@string/contentSwZoom"
        android:checked="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:id="@+id/swZoom"
        android:layout_alignParentStart="true" />

    <Switch
        android:text="@string/contentSwRotate"
        android:checked="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swZoom"
        android:layout_alignEnd="@+id/swZoom"
        android:layout_marginTop="29dp"
        android:id="@+id/swRotate" />
</RelativeLayout>
